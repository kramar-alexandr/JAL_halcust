function boolean FileIsDoc(string fname)
begin
  integer i;
  boolean res;
  
  res = false;
  for (i = (len(fname)-1); i > 0; i = i - 1) begin
    if mid(fname,i,1) == "." then begin
	  if ((right(fname,4)==".doc") or (right(fname,5)==".docx")) then begin
	    res = true;
      end;
	end;
  end;

  FileIsDoc = res;

return;
end;


