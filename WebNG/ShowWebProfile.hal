function string 255 EscapeText(string tstr)
begin
  string 255 res,ch;
  integer i,l;
  
  l = len(tstr);
  for (i=0;i<l;i=i+1) begin
    ch = mid(tstr,i,1);
    if (ch=="'" or ch=="\\") then begin
      //res = res & "\\" & ch;
    end else begin
      res = res & ch;
    end;
  end;
  EscapeText = res;
  return;
end;

