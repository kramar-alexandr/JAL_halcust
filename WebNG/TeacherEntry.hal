global webpublic procedure WebGetEvents()
begin
  record JALEventVc JEr;
  record CUVc CUr;
  integer cnt;
  Longint i;
  Boolean applyf,calf;
  record WebNGTranslateVc WTr;
  string 255 tstr;

  calf = WebGetArg("calf")=="1";
  cnt = 0;
  CUr.Code = CurrentCust;
  if(ReadFirstMain(CUr,1,true) and nonblank(CurrentCust)) then begin 
    JEr.SerNr = "";
    WebOutStringFormatNL("[");
    while (LoopMain(JEr,1,true)) begin
      if (JEr.EndDate > CurrentDate and JEr.ActiveFlag==1) then begin
        applyf = false;
        if (DateInRange(CurrentDate,JEr.RegFrom,JEr.RegUntil)) then begin
          applyf = true;
        end;
        if (calf or applyf) then begin
          cnt = cnt + 1;
          if (cnt>1)then begin
            weboutstring(",");
          end;
          FindEventTranslation(JEr,WTr);
          tstr = WTr.Comment;
          if (blank(tstr)) then begin
            tstr = JEr.Comment;
          end;
          WebOutStringFormatNL("{");
          WebOutStringFormatNL("\"serNr\":\"" & JEr.SerNr & "\",");
          WebOutStringFormatNL("\"dataStart\":\"" &  DateToString(JEr.StartDate,"MM.DD.YYYY") & "\",");
          WebOutStringFormatNL("\"dataEnd\":\"" & DateToString(JEr.EndDate,"MM.DD.YYYY") & "\",");
          WebOutStringFormatNL("\"nameEvent\":\"" & tstr & "\",");
          WebOutStringFormatNL("\"allowApply\":\"" & applyf & "\",");
          WebOutStringFormatNL("\"description\":\"");
          for (i=0;i<SizeTextCnt(WTr);i=i+200) begin
            tstr = StringFromText(WTr,i,200);
            WebOutString(StrReplace(tstr,chr(13),"</br>"));
          end;
          WebOutString("\"");
          WebOutStringFormatNL("}"); 
        end;    
      end;
    end;
    WebOutStringFormatNL("]");
  end else begin  
    WebOutStringFormatNL("You might be registered");
  end;

  return;
end;

