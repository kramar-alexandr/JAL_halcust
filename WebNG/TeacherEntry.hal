  TrHs = true;
  JTr.RecCode = teacherCode;
  JTr.StatusFlag = 0;
  JTr.RecType = type;
  while (LoopKey("RecType",JTr,3,TrHs)) begin
    if (JTr.RecCode!=teachercode or JTr.StatusFlag!=0 or JTr.RecType!=type) then begin
      TrHs = false;
    end else begin
      if (JTr.SMFCode==custcode) then begin
        res = true;
        TrHs = false;
      end;
    end;
  end;

  ApplicationExists = res;
  return;
end;

