 i + 1) begin      MatRowGet(NEr,i,NErw);      if (NErw.Email == email) then begin        err = 2;        savef = false;      end;    end;  end;  if savef then begin    MatRowGet(NEr,cnt,NErw);    NErw.Email = email;    MatRowPut(NEr,cnt,NErw);    BlockStore(NEr);    PutSessionString("cemail","");              PutSessionString("err",err);        end else begin    PutSessionString("cemail",email);          PutSessionString("err",err);        end;  ShowRedirectHtml(FormatSimpleLink(WebGetArg("regpath"),true),false);return;end;global procedure DrawRemoveNewsForm()beginstopalert(WebGetArg("mail") & " nuuuuuu");WebOutStringFormatNL("<form id=""delnews"" method=""POST"" action=""/WebRemoveFromNews.hal"">");WebOutStringFormatNL("<input type=""hidden"" name=""mail"" value=""" & WebGetArg("mail") & """>");return;end;global webpublicupdating procedure WebRemoveFromNews()begin  record NewsEmailBlock NEbl;  row NewsEmailBlock NEblrw;  integer i,rwcnt;  string 50 mail;  boolean testf;  blockload(NEbl);    mail = WebGetArg("mail");  rwcnt = MatRowCnt(NEbl);  //stopalert("primais");  testf = false;  stopalert("aaa");  stopalert(rwcnt & " skaits");  for (i = 0; i < rwcnt; i = i + 1) begin    MatRowGet(NEbl,i,NEblrw);	stopalert("mekl•");	if NEblrw.Email == mail then begin	  stopalert("atrada");	  MatRowDelete(NEbl,i);	  testf = true;	end;  end;  BlockStore(NEbl);    if testf then begin    ShowRedirectHtml(FormatSimpleLink("/aftersucdel",true),false);  end else begin    ShowRedirectHtml(FormatSimpleLink("/afterbaddel",true),false);  end;  return;end;