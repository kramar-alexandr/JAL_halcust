  a_os[23] = "AIX5";
  a_os[24] = "AIX";
  a_os[25] = "SCO";
  a_os[26] = "UnixWare";
  a_os[27] = "Mpras";
  a_os[28] = "Reliant";
  a_os[29] = "Dec";
  a_os[30] = "Sinix";
  a_os[31] = "Unix";  
  alen = 32;
  
  for (i=0;i<alen;i=i+1) begin
    if (InString(browserstr,a_os[i])>0) then begin
      OSName = "Unix";
      if (a_os!="Unix") then begin
        OSVersion = a_os[i];
      end;
      goto LRecogniseOS;
    end;
  end;

  a_os[0] = "Ubuntu";
  a_os[1] = "Kubuntu";
  a_os[2] = "Xubuntu";
