function boolean TestCommentForSpam(record WebNGBlogCommentVc WCr)
begin
  boolean res;
  integer cnt,i,j;
  string 255 tstr;

  res = false;

  cnt = LineTextCnt(WCr);
  for (i = 0; i < cnt ; i = i + 1) begin
    tstr = lineTextGet(WCr,i);
    for (j = 0; j < len(tstr); j = j + 1) begin
      if mid(tstr,j,2) == "<a" then begin
        res = true;
      end;
    end;
  end;
  
  TestCommentForSpam = res;

end;

