  a_os[0] = "FreeBSD";
  a_os[1] = "OpenBSD";
  a_os[2] = "NetBSD";
  a_os[3] = "BSD";
  a_os[4] = "UnixWare";
  a_os[5] = "Solaris";
  a_os[6] = "SUNOS";
  a_os[7] = "SUN4";
  a_os[8] = "SUN5";
  a_os[9] = "SUNi86";
  a_os[10] = "SUN";
  a_os[11] = "IRIX5";
  a_os[12] = "IRIX6";
  a_os[13] = "IRIX";
  a_os[14] = "HPUX9";
  a_os[15] = "HPUX10";
  a_os[16] = "HPUX11";
  a_os[17] = "HPUX";
  a_os[18] = "HP-UX";
