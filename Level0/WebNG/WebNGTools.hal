global
procedure AddToSortedArray(string str,string str2,var array string arr,var array string arr2,var integer arrlen)
begin
  integer i;
  string 255 c;
  
  arr[arrlen] = str;
  arr2[arrlen] = str2;
  arrlen = arrlen + 1;
  i = arrlen-1;
  while (i!=0) begin
    if (arr[i]<arr[i-1]) then begin
      c = arr[i-1];
      arr[i-1] = arr[i];
      arr[i] = c;

      c = arr2[i-1];
      arr2[i-1] = arr2[i];
      arr2[i] = c;
      i = i-1;
    end else begin
      i = 0;
    end;
  end;
  return;
end;

