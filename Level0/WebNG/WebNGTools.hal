  if (nonblank(name)) then begin
    tstr = tstr & " name=""" & name & """";
  end;
  if (nonblank(value)) then begin
    tstr = tstr & " value=""" & value & """";
  end;
  tstr = tstr & " />";
  WebOutStringFormatNL(tstr);
  
  return;
end;

