globalprocedure JALDocsRn(record RCVc RepSpec)begin  record SMFVc SMFr;  record JALFileVc JFr;  boolean TrHs,testf,filef,showf;  record RLinkVc RLr;  record Attach2Vc Attachr;  integer cnt;  boolean firstf;  integer i,rwcnt;  row SMFVc SMFrw;  StartReportJob(UsetStr(7717));  EndHeader;  SetRepCol(2,15);  SetRepCol(3,80);  SetRepCol(4,200);  SetRepCol(5,280);  SMFr.SMFCode = RepSpec.f1;  TrHs = true;  ResetLoop(SMFr);  while loopkey("SMFCode",SMFr,1,TrHs) begin    if nonblank(RepSpec.f1) and RepSpec.f1<> SMFr.SMFCode then begin      TrHs = false;    end else begin      testf = TrHs;      if nonblank(RepSpec.f2) and RepSpec.f2 <> SMFr.SchoolCode then begin        testf = false;      end;      if nonblank(RepSpec.f3) and testf then begin        testf = false;        rwcnt = MatRowCnt(SMFr);        for ( i = 0; i < rwcnt; i = i + 1) begin          MatRowget(SMFr,i,SMFrw);          if SMFrw.Type == 0 and SMFrw.Code == RepSpec.f3 then begin            testf = true;            i = rwcnt;          end;        end;      end;      if testf then begin        firstf = true;        cnt = 0;        resetLoop(JFr);        filef = true;        JFr.SMFCode = SMFr.SMFCode;        while loopkey("SMFCode",JFr,1,filef) begin          if SMFr.SMFCode <> JFr.SMFCode then begin            filef = false;          end else begin            showf = filef;            if (RepSpec.flags[0] == 0 and JFr.Status == 0) then begin              showf = false;            end;            if (RepSpec.flags[1] == 0 and JFr.Status == 1) then begin              showf = false;            end;            if (RepSpec.flags[2] == 0 and JFr.Status == 2) then begin              showf = false;            end;            if (RepSpec.flags[3] == 0 and JFr.Status == 3) then begin              showf = false;            end;            if (JFr.Status > 3) then begin              showf = false;            end;            if showf then begin              if firstf then begin                StartFormat(15);                  OutString(2,"SMFDbl",SMFr.SMFCode,false);                  OutString(3,0,SMFr.SMFName,false);                endFormat;                StartFormat(1);                  Gray_Divider(0,1);                endFormat;                StartFormat(15);                  OutString(2,0,UsetStr(24517),false);                  OutString(3,0,USetStr(32407),false);                  OutString(4,0,UsetStr(20942),false);                  endFormat;                firstf = false;              end;              //druk‚jam dokumentu              StartFormat(15);                OutString(2,0,JFr.SerNr,false);                if readrecordlink(JFr,1,Attachr,RLr) begin                  OutStringID(3,"DblJALFilesVc",left(Attachr.FileName,25) & " ..",false,JFr.SerNr);                  //OutString(3,"DblJALFilesVc",JFr.SerNr,false);                end else begin                  OutString(3,0,USetStr(1546),false);                end;                OutString(4,0,UsetStr(32400+JFr.Status),false);                OutStringID(5,"DblJALFileHistRn",UsetStr(32453),false,JFr.SerNr);                              endFormat;              cnt = cnt + 1;            end;          end;        end;        if cnt > 0 begin          startFormat(1);          Gray_Divider(0,1);          endformat;          startFormat(15);          OutString(2,0,USetStr(24655) & cnt,false);          endformat;          StartFormat(1);            Black_Divider(0,1);          endFormat;        end;              end;    end;    end;  EndJob;return;end;