globalupdating procedure FillCUCodesMn(record RCVc RepSpec)begin  record RLinkVc RLr;  integer i;  boolean res;  record SMFVc SMFr,oldSMFr;  record CUVc CUr;  while (loopmain(SMFr,1,true)) begin    i = 1;    res = false;    if blank(SMFr.CustCode) then begin      while (ReadRecordLink(SMFr,i,CUr,RLr) and (res == false))begin        if (SMFr.Email == CUr.eMail) then begin          recordCopy(oldSMFr,SMFr);          SMFr.CustCode = CUr.Code;          res = true;                    if (RecordUpdate(oldSMFr,SMFr,true)== 0) then begin end;        end;        i = i + 1;      end;    end;  end;return;end;