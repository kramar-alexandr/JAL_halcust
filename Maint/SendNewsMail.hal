epSpec)begin  record NewsEmailBlock NEbl;  row NewsEmailBlock NEblrw;  record MailVc Mailr,Mail2r;  integer i,rwcnt;  BlockLoad(NEbl);  RecordNew(Mailr);  MakeMailTemplate(Mailr,RepSpec);  rwcnt = MatRowCnt(NEbl);  //stopalert("primais");  for (i = 0; i < rwcnt; i = i + 1) begin    RecordNew(Mail2r);	RecordCopy(Mail2r,Mailr);    MatRowGet(NEbl,i,NEblrw);     GenNewsMail(Mail2r,NEblrw.Email);  end;//GenNewsMail(RepSpec,mailarr,rwcnt);return;end;